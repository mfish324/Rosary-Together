rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Mystery images are publicly readable
    match /mysteries/{mysteryType}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Prayer images are publicly readable
    match /prayers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
